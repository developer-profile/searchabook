<h1>Listing books</h1>


<%= form_tag books_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Искать", :name => nil %>
  </p>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Price</th>
    <th>Link</th>
    <th>Desc</th>
    <th>Picture</th>
    <th>Vendor</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= link_to book.title, book.link %></td>
    <td><%= book.price %></td>
    <td><%= link_to "url", book.link %></td>
    <td><%= book.desc %></td>
    <td><%= image_tag book.picture, {:width=>'100', :alt=>'book.title'} %></td>
    <td><%= book.vendor %></td>
    <td><%= book.category %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

